<% include ../partials/header.ejs %>

<blockquote>Browse Ads</blockquote>

<% if (user) { %>
<a class="btn-floating waves-effect waves-light blue darken-4" href="/ads/add"><i class="material-icons">add</i></a> Add a New Advertisement
<% } %>

<table class="responsive-table highlight">
    <thead>
    <tr><th>Title</th><th>Description</th><th>Price</th>
        <% if (user) { %>
        <th>Actions</th>
        <% } %>
    </tr>
    </thead>

    <% for (var i = 0; i < ads.length; i++) { %>
    <tbody>
    <tr>
        <td><%= ads[i].title %></td>
        <td><%= ads[i].description %></td>
        <td><%= ads[i].price %></td>
        <% if (user) { %>
        <td>
            <a href="/ads/<%= ads[i]._id %>" class="btn waves-effect waves-orange">Edit<i class="material-icons left">edit</i></a>
            <a href="/ads/delete/<%= ads[i]._id %>" class="btn waves-effect waves-red confirmation">Delete<i class="material-icons left">delete</i></a>
        </td>
        <% } %>
    </tr>
    </tbody>
    <% } %>
</table>

<% include ../partials/footer.ejs %>