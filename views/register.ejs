<% include partials/header.ejs %>

<blockquote>Register</blockquote>
<div class="container">
    <form method="post">
        <div class="row">
            <div class="input-field col s12 l12 m12">
                <i class="fa fa-envelope prefix"></i>
                <input id="username" name="username" required type="email" class="validate" />
                <label for="username" id="username" data-error="please enter valid email" data-success="perfect!">Email</label>
            </div>
        </div>
        <div class="row">
            <div class="input-field col s12 l6 m6">
                <i class="fa fa-key prefix" aria-hidden="true"></i>
                <input id="password" name="password" required type="password" class="validate" />
                <label for="password" id="password">Password</label>
            </div>
            <div class="input-field col s12 l6 m6">
                <input id="confirm" name="confirm" required type="password" class="validate" />
                <label for="confirm" id="confirm">Confirm Password</label>
            </div>
            <p>
                <input type="checkbox" id="showPass" />
                <label for="showPass">Show Password</label>
            </p>
            <button class="btn waves-effect waves-green">Register
                <i class="fa fa-user-plus left"></i>
            </button>
            <hr class="style10" />
            Already have an account?  <a href="/login" title="Login">Login</a>
        </div>
    </form>
</div>

<% include partials/footer.ejs %>
